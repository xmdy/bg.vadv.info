!!!
%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }

  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @title
    %link{ :href => "/css/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/css/coderay.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    - if local_stylesheet?
      %link{ :href => "/css/local.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    = haml :analytics, :layout => false
    
  %body{ :class => @body_class }
    #header
      .container.clearfix
        %p.title= @heading
      
        %ul.nav.clearfix
          %li
            %a{ :href => "/" } Blog
          - if ! @nav_items.empty?
            - @nav_items.each do |page|
              %li
                %a{ :href => page.abspath }= page.menu_title
            
    #container
      = yield
      #footer
        %p
          Powered by
          %a{ :href => "http://effectif.com/nesta" } nesta